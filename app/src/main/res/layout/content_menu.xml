        <LinearLayout
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:cardView="http://schemas.android.com/apk/res-auto"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                cardView:cardBackgroundColor="#ffffff"
                app:cardElevation="4dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/card_view1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="App is developed by ITechnospot.com"
                        android:textColor="#1a4e91"
                        android:padding="10dp"
                        android:textStyle="bold"
                        android:id="@+id/tvMainHead"
                        android:layout_gravity="center"

                         />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                cardView:cardBackgroundColor="#e74c3c"
                app:cardElevation="4dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/news_card1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >

                <Button
                    android:id="@+id/btn_ra"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="15dp"
                    android:background="#e74c3c"
                    android:textAllCaps="true"
                    android:textColor="#fff"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Report Attendance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                cardView:cardBackgroundColor="#2ecc71"
                app:cardElevation="4dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/news_card2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >

                <Button
                    android:id="@+id/btn_t"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="15dp"
                    android:background="#2ecc71"
                    android:textAllCaps="true"
                    android:textColor="#fff"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Timeline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                cardView:cardBackgroundColor="#f1c40f"
                app:cardElevation="4dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/news_card3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >

                <Button
                    android:id="@+id/btn_rc"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="15dp"
                    android:background="#f1c40f"
                    android:textAllCaps="true"
                    android:textColor="#fff"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Review Comments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                cardView:cardBackgroundColor="#2980b9"
                app:cardElevation="4dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/news_card4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >

                <Button
                    android:id="@+id/btn_logout"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="15dp"
                    android:background="#2980b9"
                    android:textAllCaps="true"
                    android:textColor="#fff"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                cardView:cardBackgroundColor="#9b59b6"
                app:cardElevation="4dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/credits"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >

                <Button
                    android:id="@+id/btn_it"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="15dp"
                    android:background="#9b59b6"
                    android:textAllCaps="true"
                    android:textColor="#fff"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="ITechnospot.com"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.v7.widget.CardView>




