<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="itech.app.meliteapp.LoginActivity"
    tools:showIn="@layout/activity_login">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:cardView="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e3e3e3"
        android:padding="5dp"
        tools:context=".MainActivity">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    cardView:cardBackgroundColor="#ffffff"
                    app:cardElevation="4dp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/card_view2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true">

                    <TextView android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:gravity="center"
                        android:textColor="#ffc53929"
                        android:text="The regno and password is stored in the app itself.You can change your regno and password anytime through settings panel."
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        />


                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    cardView:cardBackgroundColor="#ffffff"
                    app:cardElevation="4dp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/card_view1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/melite_tv"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Enter MeLite Login"

                            android:layout_gravity="center"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:gravity="center"
                            android:textColor="#673ab7"
                            android:padding="10dp"
                            android:layout_marginTop="10dip"
                            android:layout_marginLeft="10dip"
                            android:layout_marginRight="10dip"/>



                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_layout_regno"
                            android:layout_width="match_parent"
                            android:layout_margin="10dip"
                            android:layout_height="wrap_content">

                        <EditText android:id="@+id/txtRegno"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:hint="Reg No:"
                            />
                        </android.support.design.widget.TextInputLayout>



                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_layout_password"
                            android:layout_width="match_parent"
                            android:layout_margin="10dip"
                            android:layout_height="wrap_content">

                        <EditText android:id="@+id/txtPassword"
                            android:inputType="textPassword"
                            android:ems="10"
                            android:hint="Password:"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            />

                        </android.support.design.widget.TextInputLayout>

                        <CheckBox
                            android:id="@+id/checkBox1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|start"
                            android:layout_margin="10dp"
                            android:text="Show Password" />

                        <Button android:id="@+id/btnLogin"
                            android:layout_width="fill_parent"
                            android:background="#3498db"
                            android:textColor="#fff"
                            android:layout_height="wrap_content"
                            android:text="REGISTER"
                            android:layout_margin="10dip"/>


                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </ScrollView>


    </RelativeLayout>

</RelativeLayout>
